<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
   http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>CyberLearn</display-name>

    <!-- Auth Servlet Mapping -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.cyberlearn.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Course Servlet Mapping -->
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.cyberlearn.servlet.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/courseServlet</url-pattern>
    </servlet-mapping>

    <!-- Lab Servlet Mapping -->
    <servlet>
        <servlet-name>LabServlet</servlet-name>
        <servlet-class>com.cyberlearn.servlet.LabServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LabServlet</servlet-name>
        <url-pattern>/labServlet</url-pattern>
    </servlet-mapping>

    <!-- Forum Servlet Mapping -->
    <servlet>
        <servlet-name>ForumServlet</servlet-name>
        <servlet-class>com.cyberlearn.servlet.ForumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForumServlet</servlet-name>
        <url-pattern>/forumServlet</url-pattern>
    </servlet-mapping>

    <!-- Admin Servlet Mapping -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.cyberlearn.servlet.AdminServlet</servlet-class>
    </servlet>

    <!-- FIXED: Correct mapping for admin -->
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!-- Keep old mapping if needed -->
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/adminServlet</url-pattern>
    </servlet-mapping>

    <!-- Certification Servlet Mapping -->
    <servlet>
        <servlet-name>CertificationServlet</servlet-name>
        <servlet-class>com.cyberlearn.servlet.CertificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CertificationServlet</servlet-name>
        <url-pattern>/certificationServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
